<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>


<AnchorPane prefHeight="355.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pathpilotfx.controller.countries.JapanController">
    <children>
        <Label layoutX="245.0" layoutY="14.0" text="Japan">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <ImageView fitHeight="181.0" fitWidth="215.0" layoutX="26.0" layoutY="63.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@assets/japan-stamp.png" />
            </image>
        </ImageView>
        <HBox alignment="CENTER" spacing="25" layoutX="11.0" layoutY="325.0" prefHeight="61.0" prefWidth="577.0">
            <children>
                <Button fx:id="beginButton" mnemonicParsing="false" text="Begin Exploration" onAction="#onBeginButtonClick"/>
                <Button fx:id="unlockButton" mnemonicParsing="false" text="Unlock Country" onAction="#onUnlockButtonClick"/>
                <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel Exploration" onAction="#onCancelButtonClick"/>
            </children>
            <padding>
                <Insets right="20.0" />
            </padding>
        </HBox>
        <Button fx:id="backButton" layoutX="26.0" layoutY="19.0" mnemonicParsing="false" text="Back to Map" onAction="#onBackButtonClick" />
        <VBox layoutX="290.0" layoutY="63.0" prefHeight="241.0" prefWidth="297.0">
            <children>
                <Label text="Placeholder text" />
            </children>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.pathpilotfx.controller.TimerController"
            alignment="CENTER"
            maxHeight="1.7976931348623157E308"
            maxWidth="1.7976931348623157E308"
            minHeight="-Infinity"
            minWidth="-Infinity"
            style="-fx-background-color: #F9F5EE;">
    <Label fx:id="timerType" text="FOCUS"/>
    <Label fx:id="timerDisplay" style="-fx-padding: 20;" text="00:00">
        <font>
            <Font size="30.0" />
        </font>
    </Label>
    <HBox alignment="CENTER">
        <Button onAction="#onStartButtonClick" text="Start" />
        <Button onAction="#onStopButtonClick" text="Stop" />
        <Button onAction="#onTypeButtonClick" text="Change Type" />
    </HBox>


</VBox>

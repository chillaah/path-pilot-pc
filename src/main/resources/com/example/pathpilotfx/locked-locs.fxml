<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.example.pathpilotfx.controller.map.LockedController"
        alignment="CENTER" spacing="10"
        prefHeight="355.0" prefWidth="700.0">

    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <ListView fx:id="countryListView"/>
            </content>
        </ScrollPane>
    </children>
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="backButton" text="Back" onAction="#onBackButtonClick"/>
        <Button fx:id="viewButton" text="View" onAction="#onViewButtonClick" visible="false"/>
    </HBox>


</VBox>

